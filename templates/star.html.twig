<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
{% for star in stars %}
    {% if star.published %}
        <article style=" border: 2px solid {{ star.color }}">
            <h1> {{ star.title }}</h1>
            <p>{{ star.description }}</p>
            <img src="{{ star.image }}">
            <p>{{ star.publishedDate|date("m/d/Y") }}</p>
        </article>
    {% endif %}
{% endfor %}
</body>
</html>